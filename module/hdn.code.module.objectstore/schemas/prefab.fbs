include "meta.fbs";
include "prefab_component.fbs";

namespace hdn;

// An entity within a prefab
table Entity {
    id: uuid;
    name: string;
    components: [Component];
    children: [Entity]; // optional, for hierarchy
}

// A single prefab
table PrefabAsset {
    id: ulong; // Built from the input required to build the object
    meta: Metadata;
    name: string;
    entities: [Entity];
}

// Define the root
root_type PrefabAsset;
